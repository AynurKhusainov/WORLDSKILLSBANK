<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KursActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/RTitleKurs"
    android:background="#DBDBDC"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/KursData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy"
        android:layout_toLeftOf="@id/KursSell"
        android:layout_marginRight="110dp"
        android:id="@+id/KursBuy"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sell"
        android:id="@+id/KursSell"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/RTitleKurs"
        android:layout_height="fill_parent">
    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>